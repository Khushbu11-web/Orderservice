
<section class="cart py-16" >
<% if(session.cart)  { %>
       <div class="order container mx-auto w-1/2 ">
          <div class="flex items-center border-b border-grey-300 pb-4 ">
                      <img src="/img/cart-black.png">
                       <h1 class="font-bold ml-4 text-2xl">order summary</h1>
           </div>
           <div class="pizza-list">
            <% for(let order of Object.values(session.cart.items)) { %>
              <div class="flex items-center my-8">
                  <img class="w-24" height=50 src="/img/<%= order.items.image %>" alt="">
                            
                                  <div class="flex-1 ml-4">
                                              <h1><%= order.items.name %></h1>
                                              <span ><%= order.items.size %> Pack</span>
                                              
                                   </div>           
                                           
                                           <span class="flex-1"><%= order.qty %> Pack </span>
                                           <span class="font-bold text-lg">$<%= order.items.price *  order.qty %></span>

              </div>
                         <%  } %>
            </div>
                        <hr>
                    <div class="text-right py-4">
                                <div>
                                        <span class="text-lg font-bold">Total Amount:</span>
                                         <span class="amount text-2xl font-bold ml-2">$<%= session.cart.totalPrice %></span>
                                </div>
                   
                    
                        <div>

                             <form method="POST" action="/orders" >
                                           <input class="border border-gray-400 p-2 w-1/2 mb-4" name="phone"  type="number" placeholder="Phone number" >
                                          <input class="border border-gray-400 p-2 w-1/2" type="text"  name="address"  type="text" placeholder="Address">
                                     <div class="mt-4">
                                      <div id="card-element"></div>
                                            <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6"  type="submit">Order Now</button>
                                      </div>
                        
                        </form> 

     </div>
  

   


      
       <% } else { %>
                <div class="empty-cart py-16">

                      <div class="container mx-auto text-center ">

                          <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
                          <p class="text-gray-500 text-lg mb-12"> <h2>Please select any item</h2> </p>
                          <img class="w-2/5 mx-auto"src="/img/empty-cart.png" alt="">
                          <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12 ">Go back</a>
        
                       </div>
                   </div>    

 <% } %>

</section>




